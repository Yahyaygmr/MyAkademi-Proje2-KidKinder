@model KidKinder.Entities.Contact
@{
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<!-- Header Start -->
@Html.Action("ContactHeaderPartial", "Contact")
<!-- Header End -->
<!-- Contact Start -->
<div class="container-fluid pt-5">
    <div class="container">
        <div class="text-center pb-2">
            <p class="section-title px-5">
                <span class="px-2">İletişim</span>
            </p>
            <h1 class="mb-4">Bize Yazın</h1>
        </div>
        <div class="row">
            <div class="col-lg-7 mb-5">
                <div class="contact-form">

                    @using (Html.BeginForm("Index", "Contact", FormMethod.Post))
                    {
                        <div class="form-group mt-4">
                            @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control", placeholder = "Adınız Soyadınız" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Mail Adresiniz" })
                        </div>
                        <div class="form-group mt-4">
                            @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", placeholder = "Konu" })
                        </div>
                        <div class="form-group mt-4">
                            @Html.TextAreaFor(x => x.Message, 4, 2, new { @class = "form-control", placeholder = "Mesaj" })
                        </div>
                        <div class="form-group mt-4">
                            <input type="submit" value="Gönder" class="btn btn-primary py-2 px-4">
                        </div>
                    }
                </div>
            </div>
            @Html.Action("ContactAdressPartial", "Contact")
        </div>
    </div>
</div>

<div class="container py-5">
    <h2>Harita</h2>
    <br />
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d48204.14451605069!2d28.97835858698791!3d41.00823721403169!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cac6301d587007%3A0xf47e3f1c7b9b3961!2sIstanbul%2C%20Turkey!5e0!3m2!1sen!2sus!4v1645470373374"
            width="100%;" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>

</div>
<!-- Contact End -->