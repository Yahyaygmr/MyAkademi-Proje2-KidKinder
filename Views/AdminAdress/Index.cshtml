@model KidKinder.Entities.Adress
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page-body start -->
            <div class="page-body">

                <div class="card">
                    <div class="card-header">
                        <h5>Adres</h5>
                        <span>Adres bilgileri düzenleme</span>
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li><i class="fa fa fa-wrench open-card-option"></i></li>
                                <li><i class="fa fa-window-maximize full-card"></i></li>
                                <li><i class="fa fa-minus minimize-card"></i></li>
                                <li><i class="fa fa-refresh reload-card"></i></li>
                                <li><i class="fa fa-trash close-card"></i></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-block table-border-style">
                        <form method="post">
                            @Html.HiddenFor(x => x.AdressId)
                            <div class="form-group">
                                <label>Açıklama</label>
                                @Html.TextAreaFor(x => x.Description, 4, 2, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Adres Detay</label>
                                @Html.TextBoxFor(x => x.AdressDetail, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Mail</label>
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Telefon</label>
                                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Çalışma Saatleri</label>
                                @Html.TextBoxFor(x => x.OpeningHours, new { @class = "form-control" })
                            </div>
                            <div class="form-group mt-3">
                                <button class="btn btn-success btn-round">Güncelle</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
