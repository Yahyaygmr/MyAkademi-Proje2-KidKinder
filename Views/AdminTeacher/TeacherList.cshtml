@model List<KidKinder.Entities.Teacher>

@{
    ViewBag.Title = "TeacherList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page-body start -->
            <div class="page-body">

                <div class="card">
                    <div class="card-header">
                        <h5>Öğretmen Listesi Tablosu</h5>
                        <span>Öğretmenler ile ilgili işlemleri yapabileceğiniz alandır.</span>
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li><i class="fa fa fa-wrench open-card-option"></i></li>
                                <li><i class="fa fa-window-maximize full-card"></i></li>
                                <li><i class="fa fa-minus minimize-card"></i></li>
                                <li><i class="fa fa-refresh reload-card"></i></li>
                                <li><i class="fa fa-trash close-card"></i></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-block table-border-style">
                        <div class="table-responsive">
                            <table class="table table-hover mb-3">
                                <thead>
                                    <tr class="bg-primary">
                                        <th>#</th>
                                        <th>Resim</th>
                                        <th>Ad Soyad</th>
                                        <th>Branş</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.TeacherId</td>
                                            <td><img src="@item.ImageUrl" style="width:70px; object-fit:cover;"/></td>
                                            <td>@item.NameSurname</td>
                                            <td>@item.Branch.Name</td>
                                            <td><a href="/AdminTeacher/DeleteTeacher/@item.TeacherId" class="btn btn-danger btn-round">Sil</a></td>
                                            <td><a href="/AdminTeacher/UpdateTeacher/@item.TeacherId" class="btn btn-info btn-round">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                                <a href="/AdminTeacher/CreateTeacher/" class="btn btn-primary btn-round">+ Yeni Öğretmen Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
