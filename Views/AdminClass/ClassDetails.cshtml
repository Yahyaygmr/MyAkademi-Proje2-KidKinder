@model KidKinder.Entities.ClassRoom
@{
    ViewBag.Title = "ClassDetails";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page-body start -->
            <div class="page-body">

                <div class="card">
                    <div class="card-header">
                        <h5>Eğitim</h5>
                        <span>Eğitim Detayı</span>
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li><i class="fa fa fa-wrench open-card-option"></i></li>
                                <li><i class="fa fa-window-maximize full-card"></i></li>
                                <li><i class="fa fa-minus minimize-card"></i></li>
                                <li><i class="fa fa-refresh reload-card"></i></li>
                                <li><i class="fa fa-trash close-card"></i></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-block table-border-style">
                        <div class="row">
                            <div class="col-lg-4 mb-5">
                                <div class="card border-0 bg-light shadow-sm pb-2">
                                    <img class="card-img-top mb-2" src="@Model.ImageUrl" alt="" style="width: 100%; height:200px; object-fit: cover; " />
                                    <div class="card-body text-center">
                                        <h4 class="card-title">@Model.Title</h4>
                                        <p class="card-text">
                                            @Model.Description
                                        </p>
                                    </div>
                                    <div class="card-footer bg-transparent py-4 px-5">
                                        <div class="row border-bottom">
                                            <div class="col-6 py-1 text-right border-right">
                                                <strong>Yaş Aralığı</strong>
                                            </div>
                                            <div class="col-6 py-1">@Model.AgeOfKids</div>
                                        </div>
                                        <div class="row border-bottom">
                                            <div class="col-6 py-1 text-right border-right">
                                                <strong>Kontejyan </strong>
                                            </div>
                                            <div class="col-6 py-1">@Model.TotalSeats</div>
                                        </div>
                                        <div class="row border-bottom">
                                            <div class="col-6 py-1 text-right border-right">
                                                <strong>Ders Saatleri</strong>
                                            </div>
                                            <div class="col-6 py-1">@Model.ClassTime</div>
                                        </div>
                                        <div class="row">
                                            <div class="col-6 py-1 text-right border-right">
                                                <strong>Fiyat</strong>
                                            </div>
                                            <div class="col-6 py-1">₺ @Model.Price / Aylık</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-8 mb-5">
                               @Html.Action("PartialBook", "AdminClass", new {id = ViewBag.Id})
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>