@model KidKinder.Entities.BookASeat
<div class="container-fluid py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7 mb-5 mb-lg-0">
                <p class="section-title pr-5">
                    <span class="pr-2">Ders İçin Önkayıt</span>
                </p>
                <h1 class="mb-4">Hemen Kaydolun</h1>
                <p>
                    Sınıflar için ön kayıt yapın. Biz size ulaşıp ayrıntılar hakkında sizi bilgilendirelim
                </p>
                <ul class="list-inline m-0">
                    <li class="py-2">
                        <i class="fa fa-check text-success mr-3"></i>Erken kayıtta fiyat avantajı.
                    </li>
                    <li class="py-2">
                        <i class="fa fa-check text-success mr-3"></i>Birebir ders imkanı.
                    </li>
                    <li class="py-2">
                        <i class="fa fa-check text-success mr-3"></i>Süpriz hediyeler.
                    </li>
                </ul>
                <a href="" class="btn btn-primary mt-4 py-2 px-4">Önkayıt</a>
            </div>
            <div class="col-lg-5">
                <div class="card border-0">
                    <div class="card-header bg-secondary text-center p-4">
                        <h1 class="text-white m-0">Ön Kayıt</h1>
                    </div>
                    <div class="card-body rounded-bottom bg-primary p-5">
                        @using (Html.BeginForm("BookASeat", "Default", FormMethod.Post))
                        {
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control border-0 p-4", placeholder = "Adınız" })>
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control border-0 p-4", placeholder = "Mail Adresiniz" })>
                            </div>
                            <div class="form-group">
                                @Html.DropDownListFor(x => x.ClassRoomId, (SelectList)ViewBag.ClassRooms, new { @class = "custom-select border-0 px-4", style = "height: 47px" })
                    
                            </div>
                            <div>
                                <input type="submit" value="Kayıt Ol" class="btn btn-secondary btn-block border-0 py-3">
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>