@model KidKinder.Entities.MailSubscribe
<div class="col-lg-3 col-md-6 mb-5">
    <h3 class="text-primary mb-4">Mail Bülteni</h3>
    @using (Html.BeginForm("Newsletter", "Default", FormMethod.Post))
    {
        <div class="form-group">
            @Html.TextBoxFor(x => x.Name, new {@class= "form-control border-0 py-4", placeholder="Adınız"})
           
        </div>
        <div class="form-group">
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control border-0 py-4", placeholder = "Mail Adresiniz" })
        </div>
        <div>
            <input type="submit" value="Kayıt Ol" class="btn btn-primary btn-block border-0 py-3">
        </div>
    }

</div>
